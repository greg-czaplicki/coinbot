# Copy policy
COPY_SOURCE_WALLET=0x1d0034134e339a309700ff2d34e99fa2d48b0313
COPY_MODE=intent_net
COPY_COALESCE_MS=300
COPY_NET_OPPOSITE_TRADES=true
COPY_MAX_SOURCE_STALENESS_MS=0

# Sizing and risk caps
SIZING_MODE=capped_proportional
SIZING_FIXED_ORDER_NOTIONAL_USD=10
SIZING_SIZE_MULTIPLIER=1.0
SIZING_MIN_ORDER_NOTIONAL_USD=1
SIZING_MAX_NOTIONAL_PER_ORDER_USD=25
SIZING_MAX_NOTIONAL_PER_MARKET_USD=150
SIZING_MAX_DAILY_TRADED_VOLUME_USD=1500
SIZING_MAX_TOTAL_NOTIONAL_PER_15M_WINDOW_USD=400

# Execution behavior
EXECUTION_ORDER_TYPE=marketable_limit
EXECUTION_MAX_SLIPPAGE_BPS=120
EXECUTION_NEAR_EXPIRY_CUTOFF_SECONDS=25
EXECUTION_FEE_BPS=0
EXECUTION_SAFETY_PROFILE=standard
EXECUTION_DRY_RUN=true
# Auto kill-switch behavior
AUTO_KILL_MAX_ERROR_RATE=0.2
AUTO_KILL_MAX_P95_LATENCY_MS=1200
AUTO_KILL_RECOVER_MAX_ERROR_RATE=0.1
AUTO_KILL_RECOVER_MAX_P95_LATENCY_MS=800
AUTO_KILL_RECOVERY_CONSECUTIVE_SNAPSHOTS=2
# For first live rollout:
# EXECUTION_DRY_RUN=false
# EXECUTION_SAFETY_PROFILE=conservative

# Polymarket credentials (keep secret)
POLYMARKET_CHAIN_ID=137
POLYMARKET_SIGNATURE_TYPE=2
POLYMARKET_PRIVATE_KEY=
POLYMARKET_FUNDER=
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
